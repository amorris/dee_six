!!!
%html
  %head
    %title DeeSix Prototype
    = stylesheet_link_tag 'web_app_theme'
    = stylesheet_link_tag 'application'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"} DeeSix Prototype
        #user-navigation
          %ul.wat-cf
            %li
              %a{:href => "#"}= t("web-app-theme.profile", :default => "Profile")
            %li
              %a{:href => "#"}= t("web-app-theme.settings", :default => "Settings")
            %li
              %a.logout{:href => "/logout"}= t("web-app-theme.logout", :default => "Logout")
        #main-navigation
          %ul.wat-cf
            %li
              =link_to 'Projects', projects_path
            %li
              =link_to 'Accounts', accounts_path
            %li
              =link_to 'Evidence', evidences_path
            %li
              =link_to 'Inventory', inventories_path
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} DeeSix Prototype.
        #sidebar
          = yield :sidebar
